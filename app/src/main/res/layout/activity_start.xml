<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FF84B6"> >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✨GeoMark✨"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"/>

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:contentDescription="Logo aplikacji"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvAuthors"
        android:text="Autorzy:\n Małgorzata Chmolowska\n Małgorzata Kubarska\n Julia Mioduszewska\n Dagmara Wancel"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="48dp"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zaczynamy!"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFB6C1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:textSize="18sp"
        android:elevation="8dp" />
</LinearLayout>
